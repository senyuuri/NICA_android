<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:textSize="30sp"
            android:text="First time using our app? "
            android:layout_gravity="center_horizontal|top"/>

    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:textSize="25sp"
            android:text="Please enter your name. (Your family members will see this in their contact list )"
            android:layout_gravity="center_horizontal|top"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_edittext"
            android:layout_gravity="left|center_vertical"
            android:inputType="text"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getname_button"
            android:id="@+id/user_name_button"
            android:layout_gravity="left|center_vertical"
            android:focusableInTouchMode="false"
            android:singleLine="false"
            android:onClick="onclick"/>
</LinearLayout><!-- From: file:/Users/natsuyuu/Documents/9597_Computing/NICAProject/NICA/src/main/res/layout/user_getname.xml -->