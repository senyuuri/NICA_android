<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="40sp"
            android:text="Join a family circle"
            android:layout_gravity="center_horizontal|top"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:text="Enter the phone number of a registered family member."
            android:layout_gravity="center_horizontal|top"/>
    <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Just leave it blank if you are the first user of your family. We will create a new family circle for you."
            android:layout_gravity="center_horizontal|top"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_circle_edittext"
            android:layout_gravity="left|center_vertical"
            android:inputType="text"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getname_button"
            android:id="@+id/user_circle_button"
            android:layout_gravity="left|center_vertical"
            android:focusableInTouchMode="false"
            android:singleLine="false"
            android:onClick="onclick"/>
</LinearLayout><!-- From: file:/Users/natsuyuu/Documents/9597_Computing/NICAProject/NICA/src/main/res/layout/user_getcircle.xml -->